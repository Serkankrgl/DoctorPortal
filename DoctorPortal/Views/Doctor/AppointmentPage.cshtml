@model List<DoctorPortal.Models.Appointment>
@{
    ViewData["Title"] = "ApproveAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div></div>

<table class="table">
    <thead>
        <tr>
            <th>
                Hasta Adı Soyadı
            </th>
            <th>
                Şikayeti
            </th>
            <th>
                Tarih
            </th>
            <th>
                Randevu Durumu
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    @i.Patient.User.GetFulName()
                </td>
                <td>
                    @i.Description
                </td>
                <td>
                    @i.AppointmentDate
                </td>
                <td>
                    @if (i.Status == "0")
                    {
                        <span>Onayda</span>
                    }
                    @if (i.Status == "1")
                    {
                        <span>Onaylandı</span>
                    }
                    @if (i.Status == "2")
                    {
                        <span>Reddedildi</span>
                    }
                </td>
                <td>
                    @if (i.Status == "0")
                    {
                        <a asp-action="ApproveAppointment" asp-route-id="@i.AppointmentId">Onayla</a>
                        <span>|</span>
                        <a asp-action="RejectAppointment" asp-route-id="@i.AppointmentId">Reddet</a>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>