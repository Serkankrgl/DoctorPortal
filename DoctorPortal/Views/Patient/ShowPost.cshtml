@model Comment
<div class="card-body">
    @foreach (var post in ViewBag.Posts)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Post</label>
                    <textarea rows="4" cols="80" class="form-control" placeholder="Here can be your post" value="@post.PostContent" disabled>@post.PostContent</textarea>
                </div>
                <div class="form-group">
                    <label>User</label>
                    <input class="form-control" value="@ViewBag.UserName" disabled/>
                </div>
 
            </div>

<form method="post"  asp-controller="Patient" asp-action="AddComment">

   <label asp-for="CommentContent">Your Comment</label>

   <input asp-for="CommentContent" class="form-control" />
                    <input asp-for="PostId" hidden value="@post.PostId"/>
                    <input asp-for="UserId" hidden value="@post.PatientId " />
                    <button type="submit">Send</button>
                </form>
            <form method="post" asp-controller="Patient" asp-action="ShowPostDetail">
                <input asp-for="PostId" value="@post.PostId" hidden />
                <button type="submit">Show Comments</button>
            </form>
            </div>
        <hr />
    }
</div>