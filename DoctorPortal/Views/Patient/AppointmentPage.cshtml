@model List<DoctorPortal.Models.Appointment>
@{
    ViewData["Title"] = "AppointmentPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AppointmentPage</h1>

<p>
    <a asp-action="CreateAppointment">Randevu Oluştur.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Doktor Adı Soyadı
            </th>
            <th>
                Şikayeti
            </th>
            <th>
                Tarih
            </th>
            <th>
                Randevu Durumu
            </th>
            <th>
                Red Neden
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td>
                @i.Doctor.User.GetFulName()
            </td>
            <td>
                @i.Description
            </td>
            <td>
                @i.AppointmentDate
            </td>
            <td>
                @if (i.Status == "0")
                {
                    <span>Onayda</span>
                }
                @if (i.Status == "1")
                {
                    <span>Onaylandı</span>
                }
                @if (i.Status == "2")
                {
                    <span>Reddedildi</span>
                }
            </td>
            <td>
                @if (i.Status == "2")
                {
                    @i.DenyReason
                }
            </td>
            <td>
                @if (i.Status == "0")
                {
                <a asp-action="DeleteAppointment" asp-route-id="@i.AppointmentId">Delete</a>
                }
            </td>
        </tr>
        }

    </tbody>
</table>